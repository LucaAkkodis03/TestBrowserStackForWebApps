pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        echo 'ğŸ“¦ Clonazione del repository...'
        checkout scm
      }
    }

    stage('Check the installation') {
      tools {
        nodejs 'nodeJs25'  // Nome configurato in Jenkins â†’ Manage Jenkins â†’ Tools â†’ NodeJS
      }
      steps {
        sh 'node -v'
        sh 'npm -v'
      }
    }

    stage('Run on BrowserStack') {
     tools {
        nodejs 'nodeJs25'  // Nome configurato in Jenkins â†’ Manage Jenkins â†’ Tools â†’ NodeJS
                         //Fondamentale esplicitare la versione di node per eseguire npm
      }
      steps {
        // ğŸ”¹ Wrappa tutto con le credenziali BrowserStack
        browserstack(credentialsId: 'c047256b-195c-4fa3-acd2-c1d34c943a17') {
          echo 'ğŸ” Credenziali BrowserStack trovate, procedo con il test...'
          
          dir('config') { //Dobbiamo dire a jenkins di guarda dentro nella cartella config una volta caricato il file
            echo 'ğŸ“¥ Installazione dipendenze...'
            sh 'npm ci || npm install'

            echo 'ğŸš€ Avvio test WebdriverIO su BrowserStack...'
            sh 'npm run wdio'
          }
          
        }
        browserStackReportPublisher 'automate'
      }
    }
  }

  post {
    always {
      echo 'ğŸ Pipeline terminata.'
    }
    failure {
      echo 'âŒ Build fallita.'
    }
    success {
      echo 'âœ… Tutti i test sono passati con successo!'
    }
  }
}
